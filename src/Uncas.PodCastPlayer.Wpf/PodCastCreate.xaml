<UserControl x:Class="Uncas.PodCastPlayer.Wpf.PodCastCreate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Url</Label>
        <TextBox x:Name="urlTextBox" Grid.Row="0" Grid.Column="1"></TextBox>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" >
            <Button x:Name="createButton" Content="Create"></Button>
        </StackPanel>   
    </Grid>
</UserControl>
