<UserControl x:Class="Uncas.PodCastPlayer.Wpf.PodCastDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Name</Label>
        <TextBlock x:Name="nameTextBox" Grid.Row="0" Grid.Column="1"></TextBlock>
        <Label Grid.Row="1" Grid.Column="0">Url</Label>
        <TextBlock x:Name="urlTextBox" Grid.Row="1" Grid.Column="1"></TextBlock>
        <Label Grid.Row="2" Grid.Column="0">Author</Label>
        <TextBlock x:Name="authorTextBlock" Grid.Row="2" Grid.Column="2"></TextBlock>
        <Label Grid.Row="3" Grid.Column="0">Description</Label>
        <TextBlock x:Name="descriptionTextBlock" Grid.Row="3" Grid.Column="2" TextWrapping="Wrap"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2" >
            <Button x:Name="saveButton" Content="Save" Visibility="Hidden"></Button>
            <Button x:Name="deleteButton" Content="Delete"></Button>
        </StackPanel>
    </Grid>
</UserControl>