<Window x:Class="Uncas.PodCastPlayer.Wpf.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Pod cast downloader" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button x:Name="podCastsButton" Height="30" Content="Pod casts"></Button>
            <Button x:Name="downloadsButton" Height="30" Content="Downloads"></Button>
        </StackPanel>
        <ContentControl x:Name="contentControl" Grid.Column="1"></ContentControl>
    </Grid>
</Window>
